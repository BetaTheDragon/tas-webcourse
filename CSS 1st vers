/*Typing Animation*/
ul {
    list-style: none;
    height: 55px;
    overflow: hidden;
}

    ul li {
        color: #E7EAEA;
        font-size: 50px;
        position: relative;
        top: 0;
        margin: 0;
        animation: scrolling 8s steps(4) infinite;
    }

        ul li:nth-child(1) {
            color: cornflowerblue
        }

        ul li:nth-child(2) {
            color: black
        }

        ul li:nth-child(3) {
            color: cornflowerblue
        }

        ul li:nth-child(4) {
            color: black
        }

        ul li::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            left: 0;
            background-color: whitesmoke;
            border-left: 5px solid whitesmoke;
            animation: typing 2s steps(100) infinite;
        }

@keyframes typing {
    100% {
        left: 100%;
        margin: 0 -40px 0 35px;
    }
}

@keyframes scrolling {
    100% {
        top: -240px;
    }
}
